---
// ========================================
// TEAM MEMBER CARD COMPONENT
// Testimonial-style card with two-column layout
// Supports alternating image-first/text-first patterns
// ========================================

import type { TeamMember } from '../../../types/database'

interface Props {
  member: TeamMember
  featured?: boolean
}

const { member, featured = false } = Astro.props

// Default avatar if no photo
const avatarUrl = member.profile_photo_url || `https://ui-avatars.com/api/?name=${encodeURIComponent(member.full_name)}&size=400&background=F5F5F5&color=6B7280`

// Determine which contact methods are available
const hasEmail = !!member.email
const hasPhone = !!member.phone
const hasLinkedIn = !!member.social_links?.linkedin
const emailAddress = member.email

// Generate star rating (default 5 stars for team members)
const starRating = 5
---

<article
  class:list={[
    'team-card',
    { 'team-card--featured': featured }
  ]}
>
  <!-- Image Column -->
  <div class="team-card__image-col">
    <div class="team-card__image-wrap">
      <img
        src={avatarUrl}
        alt={member.full_name}
        class="team-card__image"
        loading="lazy"
      />
    </div>
  </div>

  <!-- Content Column -->
  <div class="team-card__content-col">
    <!-- Quote Icon -->
    <div class="team-card__quote">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
      </svg>
    </div>

    <!-- Testimonial Heading -->
    {member.job_title && (
      <h4 class="team-card__heading">{member.job_title}</h4>
    )}

    <!-- Bio / Testimonial Text -->
    {member.short_bio ? (
      <p class="team-card__text">{member.short_bio}</p>
    ) : (
      <p class="team-card__text">Dedicated to delivering exceptional service and results for every client.</p>
    )}

    <!-- Attribution Section -->
    <div class="team-card__attribution">
      <!-- Mini Avatar -->
      <div class="team-card__avatar">
        <img
          src={avatarUrl}
          alt=""
          class="team-card__avatar-img"
          loading="lazy"
        />
      </div>

      <!-- Info Stack -->
      <div class="team-card__meta">
        <!-- Star Rating -->
        <div class="team-card__rating" aria-label={`${starRating} out of 5 stars`}>
          {Array.from({ length: 5 }).map((_, i) => (
            <svg
              class:list={['team-card__star', { 'team-card__star--filled': i < starRating }]}
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              aria-hidden="true"
            >
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          ))}
        </div>

        <!-- Name -->
        <span class="team-card__name">{member.full_name}</span>
      </div>
    </div>

    <!-- Contact Links (Optional) -->
    {(hasEmail || hasPhone || hasLinkedIn) && (
      <div class="team-card__links">
        {hasEmail && (
          <a href={`mailto:${emailAddress}`} class="team-card__link" title="Email">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="16" x="2" y="4" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
          </a>
        )}
        {hasPhone && (
          <a href={`tel:${member.phone}`} class="team-card__link" title="Call">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
          </a>
        )}
        {hasLinkedIn && (
          <a href={member.social_links.linkedin} target="_blank" rel="noopener noreferrer" class="team-card__link" title="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        )}
      </div>
    )}
  </div>
</article>

<style lang="scss">
  @use '../../../styles/pages/team/team-cards';
</style>
