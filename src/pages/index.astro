---

<Layout>
  <!-- Hero Section -->
  <Hero
    headline={brand.tagline || "A Sprawling Coastal Escape"}
    description={brand.mission_statement || "Discover exceptional properties with personalized service from our experienced local team."}
    ctaText="Start your search"
    ctaLink="/search"
    backgroundType="image"
    backgroundSrc="https://images.pexels.com/photos/3457299/pexels-photo-3457299.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
    overlayOpacity="medium"
    showTicker={true}
    tickerLogos={[
      { src: "/logos/PRScheme.svg", alt: "Property Redress Scheme" },
      { src: "/logos/Rightmove.png", alt: "Rightmove" },
      { src: "/logos/Zoopla.png", alt: "Zoopla" },
      { src: "/logos/propertymark.svg", alt: "Propertymark" },
      { src: "/logos/OnTheMarket.png", alt: "OnTheMarket" },
      { src: "/logos/TDS.png", alt: "Tenancy Deposit Scheme" },
    ]}
  />

  <!-- Intro Section -->
